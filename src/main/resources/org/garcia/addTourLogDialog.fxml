<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.garcia.layerView.controller.AddTourLogController">

    <VBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
        <Text strokeType="OUTSIDE" text="Add new log">
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" top="10.0"/>
            </VBox.margin>
        </Text>
        <HBox alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <!--  DATE -->
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Date">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Label>
            <DatePicker fx:id="datePicker"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <!--  RATING -->
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Rating"/>
            <Slider fx:id="ratingSlider" blockIncrement="1.0" majorTickUnit="10.0" max="10.0" min="1.0"
                    minorTickCount="9" prefHeight="14.0" prefWidth="70.0" snapToTicks="true" GridPane.columnIndex="1"
                    GridPane.hgrow="ALWAYS" GridPane.rowIndex="9"/>
            <Label minWidth="20.0" text="0.0"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <!--  SPORT -->
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Sport"/>
            <ChoiceBox fx:id="sportChoiceBox" layoutX="24.0" layoutY="14.0" prefWidth="80.0" value="Bike">
            </ChoiceBox>
        </HBox>
        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="109.0" prefWidth="150" spacing="20">
            <children>
                <Label alignment="CENTER_RIGHT" minWidth="100" text="Mood"/>
                <ChoiceBox fx:id="sportChoiceBox1" layoutX="24.0" layoutY="14.0" prefWidth="150.0" value="Bike"/>
            </children>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Duration"/>
            <TextField fx:id="logDuration" minWidth="100" prefWidth="150"/>
        </HBox>
        <HBox alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
            <!--  DISTANCE -->
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Distance"/>
            <TextField fx:id="logDistance" minWidth="100" prefWidth="150"/>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="261.0" prefWidth="150" spacing="20">
            <Label alignment="CENTER_RIGHT" minWidth="100" text="End"/>
            <TextField fx:id="start" minWidth="100" prefWidth="150"/>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="261.0" prefWidth="150" spacing="20">
            <Label alignment="CENTER_RIGHT" minWidth="100" text="End"/>
            <TextField fx:id="end" minWidth="100" prefWidth="150"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0" top="20.0"/>
            </VBox.margin>
            <Button alignment="CENTER" defaultButton="true"
                    onAction="#addTourLog" prefWidth="55.0"
                    text="Save" textAlignment="CENTER"/>
            <Button alignment="CENTER"
                    onAction="#closeDialog" prefWidth="55.0"
                    text="Cancel" textAlignment="CENTER"/>
        </HBox>

    </VBox>
</AnchorPane>

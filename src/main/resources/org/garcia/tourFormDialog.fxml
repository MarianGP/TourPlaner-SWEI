<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="330.0" minWidth="-Infinity" prefHeight="330.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.garcia.layerView.controller.TourFormController">

    <VBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT">
        <Text strokeType="OUTSIDE" text="Add new Tour">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" top="10.0" />
            </VBox.margin>
        </Text>
        <HBox alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Title">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </Label>
            <TextField fx:id="title" minWidth="100" prefWidth="150" />
        </HBox>
        <HBox fx:id="originHBOX" alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Origin" />
            <TextField fx:id="origin" minWidth="100" prefWidth="150" />
        </HBox>
        <HBox fx:id="destinationHBOX" alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Destination" />
            <TextField fx:id="destination" minWidth="100" prefWidth="150" />
        </HBox>
        <HBox alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Label alignment="CENTER_RIGHT" minWidth="100" text="Description" />
            <TextField fx:id="description" maxHeight="100" minWidth="100" prefHeight="Infinity" prefWidth="150" />
        </HBox>
        <HBox alignment="CENTER" prefWidth="150" spacing="20">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Label fx:id="alertLabel" alignment="CENTER_RIGHT" minWidth="100" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefWidth="150" spacing="5">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
            <Button fx:id="addBtn" alignment="CENTER" defaultButton="true" onAction="#addTour" prefWidth="55.0" text="Save" textAlignment="CENTER" />
            <Button fx:id="editBtn" alignment="CENTER" defaultButton="true" onAction="#editTour" prefWidth="55.0" text="Edit" textAlignment="CENTER" />
            <Button alignment="CENTER" onAction="#closeDialog" prefWidth="55.0" text="Cancel" textAlignment="CENTER" />
        </HBox>

    </VBox>
</AnchorPane>
